<UserControl x:Class="WpfApp3.Views.Validators.ValidatorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfApp3.ViewModels.Validators"
             xmlns:models="clr-namespace:WpfApp3.Models"
             Background="#F3F5F9">

    <!-- IMPORTANT: match Beneficiaries working pattern -->
    <UserControl.DataContext>
        <vm:ValidatorsViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Backdrop button (prevents hover turning blue) -->
        <Style x:Key="BackdropButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="Transparent"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Outline button -->
        <Style x:Key="OutlineButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="BorderBrush" Value="#2E3A59"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon-like square button -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Top pill tab (Not Yet Validated / Validated) -->
        <Style x:Key="TopTabPill" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status pill (Endorsed/Pending/Rejected) -->
        <Style x:Key="StatusPill" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="BorderBrush" Value="#EEF2FF"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Inputs -->
        <Style x:Key="SoftTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="#E5ECFA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SoftCombo" TargetType="ComboBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#E5ECFA"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Table action button -->
        <Style x:Key="RowActionButton" TargetType="Button">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Remove selection/highlight -->
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#2E3A59"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Transparent"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="#2E3A59"/>

    </UserControl.Resources>
    <Grid>
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top tabs -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">

                <!-- Not Yet Validated -->
                <Button Content="Not Yet Validated"
                Command="{Binding SetMainTabCommand}"
                CommandParameter="{x:Static vm:ValidatorsMainTab.NotYetValidated}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TopTabPill}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ActiveMainTab}" Value="{x:Static vm:ValidatorsMainTab.NotYetValidated}">
                                    <Setter Property="Background" Value="#2E3A59"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Validated -->
                <Button Content="Validated"
                Margin="10,0,0,0"
                Command="{Binding SetMainTabCommand}"
                CommandParameter="{x:Static vm:ValidatorsMainTab.Validated}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource TopTabPill}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ActiveMainTab}" Value="{x:Static vm:ValidatorsMainTab.Validated}">
                                    <Setter Property="Background" Value="#2E3A59"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- ============================= -->
            <!-- NOT YET VALIDATED SECTION     -->
            <!-- ============================= -->
            <Grid Grid.Row="2">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveMainTab}" Value="{x:Static vm:ValidatorsMainTab.NotYetValidated}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- People -->
                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="People" FontWeight="SemiBold" Foreground="#2E3A59"/>

                        <Grid Grid.Row="1" Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Style="{StaticResource SoftTextBox}"
                             Text="{Binding SearchNotYetText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Search Here"/>

                            <Button Grid.Column="2"
                            Style="{StaticResource IconButton}"
                            Content="🔍"
                            Command="{Binding SearchNotYetCommand}"/>
                        </Grid>

                        <TextBlock Grid.Row="2"
                           Text="{Binding NotYetFoundText}"
                           Foreground="#6B778C"
                           FontSize="12"
                           Margin="2,10,0,10"/>

                        <ListBox Grid.Row="3"
                         ItemsSource="{Binding NotYetItems}"
                         SelectedItem="{Binding SelectedPerson, Mode=TwoWay}"
                         BorderThickness="0"
                         Background="Transparent">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="12"/>
                                    <Setter Property="Margin" Value="0,0,0,8"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2E3A59"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:ValidatorRecord}">
                                    <TextBlock Text="{Binding FullName}" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#2E3A59"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Profile -->
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Profile Information" FontWeight="SemiBold" Foreground="#2E3A59"/>

                        <Grid Grid.Row="1" Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="140" Height="140" CornerRadius="70" Background="#D9ECFF">
                                <TextBlock Text="👤" FontSize="44" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Left fields -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Beneficiary ID" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.BeneficiaryId, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="First Name" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.FirstName, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Gender" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                                <ComboBox Style="{StaticResource SoftCombo}" Margin="0,6,0,0"
                                  ItemsSource="{Binding GenderOptions}"
                                  SelectedItem="{Binding SelectedPerson.Gender, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Barangay" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.Barangay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Right fields -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Civil Registry ID" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.CivilRegistryId, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Middle Name" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.MiddleName, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Last Name" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.LastName, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Classification" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                                <ComboBox Style="{StaticResource SoftCombo}" Margin="0,6,0,0"
                                  ItemsSource="{Binding ClassificationOptions}"
                                  SelectedItem="{Binding SelectedPerson.Classification, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Address -->
                            <StackPanel Grid.Column="2" Grid.ColumnSpan="3" Margin="0,310,0,0">
                                <TextBlock Text="Present Address" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.PresentAddress, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                            <Button Content="Save Profile" Style="{StaticResource OutlineButton}" Command="{Binding OpenSaveConfirmCommand}"/>
                            <Button Content="Validate" Margin="12,0,0,0" Style="{StaticResource PrimaryButton}" Command="{Binding OpenValidateModalCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- ============================= -->
            <!-- VALIDATED SECTION             -->
            <!-- ============================= -->
            <Grid Grid.Row="2">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveMainTab}" Value="{x:Static vm:ValidatorsMainTab.Validated}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="360"/>
                                <ColumnDefinition Width="52"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Style="{StaticResource SoftTextBox}"
                             Text="{Binding SearchValidatedText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Search Validated"/>

                            <Button Grid.Column="1" Margin="10,0,0,0"
                            Style="{StaticResource IconButton}"
                            Content="🔍"
                            Command="{Binding SearchValidatedCommand}"/>
                        </Grid>

                        <!-- Status pills -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,14,0,10">

                            <Button Content="Endorsed"
                            Command="{Binding SetStatusTabCommand}"
                            CommandParameter="{x:Static vm:ValidatorsStatusTab.Endorsed}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource StatusPill}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveStatusTab}" Value="{x:Static vm:ValidatorsStatusTab.Endorsed}">
                                                <Setter Property="Background" Value="#2E3A59"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Pending" Margin="8,0,0,0"
                            Command="{Binding SetStatusTabCommand}"
                            CommandParameter="{x:Static vm:ValidatorsStatusTab.Pending}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource StatusPill}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveStatusTab}" Value="{x:Static vm:ValidatorsStatusTab.Pending}">
                                                <Setter Property="Background" Value="#2E3A59"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="Rejected" Margin="8,0,0,0"
                            Command="{Binding SetStatusTabCommand}"
                            CommandParameter="{x:Static vm:ValidatorsStatusTab.Rejected}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource StatusPill}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveStatusTab}" Value="{x:Static vm:ValidatorsStatusTab.Rejected}">
                                                <Setter Property="Background" Value="#2E3A59"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </StackPanel>

                        <!-- Found -->
                        <TextBlock Grid.Row="2"
                           Text="{Binding ValidatedFoundText}"
                           Foreground="#6B778C"
                           FontSize="12"
                           Margin="2,0,0,10"/>

                        <!-- Table -->
                        <Border Grid.Row="3" CornerRadius="18" Background="White" Padding="10" BorderBrush="#EEF2FF" BorderThickness="1">
                            <DataGrid ItemsSource="{Binding ValidatedItems}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              RowHeaderWidth="0"
                              Background="Transparent"
                              BorderThickness="0"
                              FontSize="12"
                              Foreground="#2E3A59"
                              ColumnHeaderHeight="42"
                              RowHeight="48"
                              IsReadOnly="True"
                              SelectionUnit="FullRow"
                              SelectionMode="Single"
                              FocusVisualStyle="{x:Null}">

                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Foreground" Value="#6B86D6"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="BorderBrush" Value="#EEF2FF"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="8,0"/>
                                    </Style>

                                    <Style TargetType="DataGridRow">
                                        <Setter Property="BorderBrush" Value="#EEF2FF"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    </Style>

                                    <Style TargetType="DataGridCell">
                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="10,0"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="120"/>
                                    <DataGridTextColumn Header="Barangay" Binding="{Binding Barangay}" Width="140"/>
                                    <DataGridTextColumn Header="Classification" Binding="{Binding Classification}" Width="160"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>

                                    <DataGridTemplateColumn Width="80" Header="">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Style="{StaticResource RowActionButton}"
        Content="✎"
        Foreground="#2E3A59"
        Command="{Binding DataContext.OpenProfileModalCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>

                            </DataGrid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- ============================= -->
        <!-- VALIDATE MODAL                -->
        <!-- ============================= -->
        <Grid Panel.ZIndex="920"
          Visibility="{Binding IsValidateModalOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseValidateModalCommand}"/>

            <Border Width="520"
                CornerRadius="18"
                Background="White"
                Padding="18"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Validate"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#2E3A59"/>

                        <Button Grid.Column="1"
                            Content="✕"
                            Width="28" Height="28"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            Command="{Binding CloseValidateModalCommand}"/>
                    </Grid>

                    <StackPanel Grid.Row="1" Margin="0,14,0,0">
                        <TextBlock Text="Status" Foreground="#2E3A59" Margin="0,0,0,6"/>
                        <ComboBox Style="{StaticResource SoftCombo}"
                              ItemsSource="{Binding ValidateStatusOptions}"
                              SelectedItem="{Binding ValidateSelectedStatus}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="Cancel"
                            Width="120" Height="38"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="#2E3A59"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Command="{Binding CloseValidateModalCommand}"/>

                        <Button Content="Confirm"
                            Margin="16,0,0,0"
                            Width="140" Height="38"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding ConfirmValidateCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- PROFILE MODAL -->
        <Grid Panel.ZIndex="910"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Visibility="{Binding IsProfileModalOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseProfileModalCommand}"/>

            <Border Width="920"
            CornerRadius="18"
            Background="White"
            Padding="22"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Profile Information"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2E3A59"/>

                        <Button Grid.Column="1"
                        Content="✕"
                        Width="30" Height="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        Command="{Binding CloseProfileModalCommand}"/>
                    </Grid>

                    <!-- Body -->
                    <Grid Grid.Row="1" Margin="0,18,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Border Width="160" Height="160" CornerRadius="80" Background="#D9ECFF" VerticalAlignment="Top">
                            <TextBlock Text="👤" FontSize="54" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Form -->
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="18"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0 -->
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Beneficiary ID" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.BeneficiaryId, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Civil Registry ID" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.CivilRegistryId, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Row 1 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,14,0,0">
                                <TextBlock Text="First Name" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,14,0,0">
                                <TextBlock Text="Middle Name" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.MiddleName, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Row 2 -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,14,0,0">
                                <TextBlock Text="Gender" Foreground="#6B778C" FontSize="12"/>
                                <ComboBox Style="{StaticResource SoftCombo}" Margin="0,6,0,0"
                                  ItemsSource="{Binding GenderOptions}"
                                  SelectedItem="{Binding SelectedPerson.Gender, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,14,0,0">
                                <TextBlock Text="Last Name" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.LastName, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Row 3 -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,14,0,0">
                                <TextBlock Text="Barangay" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.Barangay, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,14,0,0">
                                <TextBlock Text="Classification" Foreground="#6B778C" FontSize="12"/>
                                <ComboBox Style="{StaticResource SoftCombo}" Margin="0,6,0,0"
                                  ItemsSource="{Binding ClassificationOptions}"
                                  SelectedItem="{Binding SelectedPerson.Classification, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <!-- Row 4 -->
                            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,14,0,0">
                                <TextBlock Text="Present Address" Foreground="#6B778C" FontSize="12"/>
                                <TextBox Style="{StaticResource SoftTextBox}" Margin="0,6,0,0"
                                 Text="{Binding SelectedPerson.PresentAddress, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <!-- Footer buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                        <Button Content="Save Profile"
                        Style="{StaticResource OutlineButton}"
                        Command="{Binding OpenSaveConfirmCommand}"/>
                        <Button Content="Validate"
                        Margin="12,0,0,0"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding OpenValidateModalCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ============================= -->
        <!-- SAVE PROFILE CONFIRM MODAL    -->
        <!-- ============================= -->
        <Grid Panel.ZIndex="940"
  Visibility="{Binding IsSaveConfirmOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseSaveConfirmCommand}"/>

            <Border Width="520"
        CornerRadius="18"
        Background="White"
        Padding="18"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Save Profile"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#2E3A59"/>

                        <Button Grid.Column="1"
                    Content="✕"
                    Width="28" Height="28"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Command="{Binding CloseSaveConfirmCommand}"/>
                    </Grid>

                    <TextBlock Grid.Row="1"
                   Text="Are you sure you want to save this profile?"
                   Margin="0,14,0,0"
                   Foreground="#2E3A59"
                   TextWrapping="Wrap"/>

                    <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,18,0,0">
                        <Button Content="Cancel"
                    Width="140" Height="40"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="#2E3A59"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Command="{Binding CloseSaveConfirmCommand}"/>

                        <Button Content="Confirm"
                    Margin="18,0,0,0"
                    Width="160" Height="40"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ConfirmSaveProfileCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
       
</UserControl>
