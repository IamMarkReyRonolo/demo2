<UserControl x:Class="WpfApp3.Views.Beneficiaries.BeneficiariesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfApp3.ViewModels.Beneficiaries"
             xmlns:conv="clr-namespace:WpfApp3.Views.Allotment"
             Background="#F3F5F9">

    <UserControl.DataContext>
        <vm:BeneficiariesViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:EqualsToBoolConverter x:Key="EqualsToBoolConverter"/>

        <!-- Backdrop button -->
        <Style x:Key="BackdropButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="Transparent"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon button -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pagination button -->
        <Style x:Key="PageButton" TargetType="Button">
            <Setter Property="MinWidth" Value="34"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="8" Background="{TemplateBinding Background}" Padding="10,4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EEF2FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Row action -->
        <Style x:Key="RowActionButton" TargetType="Button">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <Style x:Key="CenteredTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Modal inputs -->
        <Style x:Key="ModalTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="BorderBrush" Value="#E5ECFA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModalCombo" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#E5ECFA"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- PAGE -->
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top row: project dropdown + eye + total budget -->
            <Grid Grid.Row="0" Margin="0,6,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="52"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="12" Background="White" Padding="12,6">
                    <ComboBox ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject}"
                              DisplayMemberPath="ProjectName"
                              BorderThickness="0"
                              Background="Transparent"
                              Foreground="#2E3A59"
                              FontSize="12"/>
                </Border>

                <Button Grid.Column="1"
                        Style="{StaticResource IconButton}"
                        Margin="10,0,0,0"
                        Content="👁"
                        Command="{Binding OpenProjectDetailsCommand}"/>

                <TextBlock Grid.Column="3"
                           FontSize="18"
                           Text="{Binding TotalBudgetText}"
                           Foreground="#2E3A59"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Add button row (STATUS NAV REMOVED) -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding FoundText}"
                           Foreground="#6B778C"
                           FontSize="12"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding OpenAddBeneficiariesCommand}"
                        Content="＋  Add Beneficiaries"/>
            </Grid>

            <!-- Table -->
            <Border Grid.Row="2"
                    CornerRadius="18"
                    Background="White"
                    Padding="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.06"/>
                </Border.Effect>

                <DataGrid ItemsSource="{Binding Items}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeaderWidth="0"
                          Background="Transparent"
                          BorderThickness="0"
                          FontSize="12"
                          Foreground="#2E3A59"
                          ColumnHeaderHeight="42"
                          RowHeight="48"
                          IsReadOnly="True"
                          SelectionUnit="FullRow"
                          SelectionMode="Single"
                          FocusVisualStyle="{x:Null}">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Foreground" Value="#6B86D6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderBrush" Value="#EEF2FF"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>

                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderBrush" Value="#EEF2FF"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>

                        <Style TargetType="DataGridCell" BasedOn="{StaticResource CenteredCellStyle}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#2E3A59"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding BeneficiaryId}" Width="80"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="180"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="180"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="120"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Barangay" Binding="{Binding Barangay}" Width="160"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Share" Binding="{Binding ShareDisplay}" Width="160"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <!-- actions -->
                        <DataGridTemplateColumn Width="90" Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">

                                        <!-- edit share -->
                                        <Button Style="{StaticResource RowActionButton}"
                                                Content="✎"
                                                Margin="0,0,10,0"
                                                Foreground="#2E3A59"
                                                Command="{Binding DataContext.OpenEditShareCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"/>

                                        <!-- remove from project -->
                                        <Button Style="{StaticResource RowActionButton}"
                                                Content="🗑"
                                                Foreground="#E11D48"
                                                Command="{Binding DataContext.OpenRemoveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Pagination -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                <Button Content="Previous" Style="{StaticResource PageButton}" Command="{Binding PreviousPageCommand}"/>

                <ItemsControl ItemsSource="{Binding PageNumbers}" Margin="6,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource PageButton}">
                                        <Style.Triggers>
                                            <DataTrigger Value="True">
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource EqualsToBoolConverter}">
                                                        <Binding/>
                                                        <Binding Path="DataContext.CurrentPage"
                                                                 RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <Setter Property="Background" Value="#2E3A59"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Next" Style="{StaticResource PageButton}" Command="{Binding NextPageCommand}"/>
            </StackPanel>
        </Grid>

        <!-- ===================== PROJECT DETAILS MODAL ===================== -->
        <Grid Panel.ZIndex="900"
              Visibility="{Binding IsProjectDetailsOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseProjectDetailsCommand}"/>

            <Border Width="920"
                    CornerRadius="18"
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxHeight="{x:Static SystemParameters.WorkAreaHeight}">

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Padding="22">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Project"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2E3A59"/>

                            <Button Grid.Column="1"
                                    Content="✕"
                                    Width="30" Height="30"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Command="{Binding CloseProjectDetailsCommand}"/>
                        </Grid>

                        <Grid Grid.Row="1" Margin="0,14,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Project Name" Foreground="#2E3A59" Margin="0,0,0,6"/>
                                <TextBox Style="{StaticResource ModalTextBox}" Text="{Binding ProjectNameDetails}" IsReadOnly="True"/>

                                <TextBlock Text="Department" Foreground="#2E3A59" Margin="0,14,0,6"/>
                                <TextBox Style="{StaticResource ModalTextBox}" Text="{Binding DepartmentDetails}" IsReadOnly="True"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Company" Foreground="#2E3A59" Margin="0,0,0,6"/>
                                <TextBox Style="{StaticResource ModalTextBox}" Text="{Binding CompanyDetails}" IsReadOnly="True"/>

                                <TextBlock Text="Source of Fund" Foreground="#2E3A59" Margin="0,14,0,6"/>
                                <TextBox Style="{StaticResource ModalTextBox}" Text="{Binding SourceOfFundDetails}" IsReadOnly="True"/>

                                <TextBlock Text="Budget" Foreground="#2E3A59" Margin="0,14,0,6"/>
                                <TextBox Style="{StaticResource ModalTextBox}" Text="{Binding TotalBudgetDetails}" IsReadOnly="True"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ===================== ADD BENEFICIARIES MODAL ===================== -->
        <Grid Panel.ZIndex="910"
              Visibility="{Binding IsAddBeneficiariesOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseAddBeneficiariesCommand}"/>

            <Border Width="900"
                    CornerRadius="18"
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxHeight="{x:Static SystemParameters.WorkAreaHeight}">

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Padding="18">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- header -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Add Beneficiaries"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2E3A59"/>

                            <Button Grid.Column="1"
                                    Content="✕"
                                    Width="30" Height="30"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Command="{Binding CloseAddBeneficiariesCommand}"/>
                        </Grid>

                        <!-- share inputs (VALIDATED) -->
                        <Grid Grid.Row="1" Margin="0,14,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- MONEY PANEL -->
                            <StackPanel Grid.Column="0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProject.BudgetType}" Value="Money">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="Share Amount (₱) per Beneficiary" Foreground="#2E3A59" Margin="0,0,0,6"/>
                                <TextBox Style="{StaticResource ModalTextBox}"
                                         Text="{Binding AddShareAmountInput, UpdateSourceTrigger=PropertyChanged}"
                                         PreviewTextInput="Money_PreviewTextInput"
                                         PreviewKeyDown="BlockSpace_PreviewKeyDown"/>

                                <TextBlock Text="{Binding AddShareAmountError}"
                                           Foreground="#E11D48"
                                           FontSize="11"
                                           Margin="2,6,0,0"
                                           Visibility="{Binding HasAddShareAmountError, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>

                            <!-- IN-KIND PANEL -->
                            <StackPanel Grid.Column="2">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedProject.BudgetType}" Value="InKind">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="Share In-kind per Beneficiary" Foreground="#2E3A59" Margin="0,0,0,6"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Style="{StaticResource ModalTextBox}"
                                             Text="{Binding AddShareQtyInput, UpdateSourceTrigger=PropertyChanged}"
                                             PreviewTextInput="DigitsOnly_PreviewTextInput"
                                             PreviewKeyDown="BlockSpace_PreviewKeyDown"/>

                                    <TextBox Grid.Column="2"
                                             Style="{StaticResource ModalTextBox}"
                                             Text="{Binding AddShareUnitInput, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>

                                <TextBlock Text="{Binding AddShareInKindError}"
                                           Foreground="#E11D48"
                                           FontSize="11"
                                           Margin="2,6,0,0"
                                           Visibility="{Binding HasAddShareInKindError, Converter={StaticResource BoolToVis}}"/>

                                <TextBlock Text="Example: 2 | sacks of rice"
                                           Foreground="#6B778C"
                                           FontSize="11"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- search + add -->
                        <Grid Grid.Row="2" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="360"/>
                                <ColumnDefinition Width="52"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border CornerRadius="10" Background="White" BorderBrush="#EEF2FF" BorderThickness="1" Padding="10,6">
                                <TextBox Text="{Binding AddSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Foreground="#2E3A59"
                                         FontSize="12"/>
                            </Border>

                            <Button Grid.Column="1"
                                    Style="{StaticResource IconButton}"
                                    Margin="10,0,0,0"
                                    Content="🔍"
                                    Command="{Binding SearchAddCommand}"/>

                            <Button Grid.Column="3"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="16,8"
                                    Content="{Binding AddButtonText}"
                                    Command="{Binding ConfirmAddSelectedCommand}"
                                    IsEnabled="{Binding CanConfirmAddSelected}"/>
                        </Grid>

                        <TextBlock Grid.Row="3"
                                   Text="{Binding AddFoundText}"
                                   Foreground="#6B778C"
                                   FontSize="12"
                                   Margin="2,0,0,10"/>

                        <Border Grid.Row="3" CornerRadius="14" BorderBrush="#EEF2FF" BorderThickness="1" Padding="6" Margin="0,22,0,0">
                            <DataGrid ItemsSource="{Binding AddItems}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      RowHeaderWidth="0"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      FontSize="12"
                                      Foreground="#2E3A59"
                                      ColumnHeaderHeight="40"
                                      RowHeight="44"
                                      IsReadOnly="True"
                                      SelectionUnit="FullRow"
                                      SelectionMode="Single"
                                      FocusVisualStyle="{x:Null}">

                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="40" IsReadOnly="False">
                                        <DataGridTemplateColumn.Header>
                                            <CheckBox HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      IsChecked="{Binding IsAddAllSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="ID" Binding="{Binding BeneficiaryId}" Width="80"
                                                        CellStyle="{StaticResource CenteredCellStyle}"
                                                        ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="180"
                                                        CellStyle="{StaticResource CenteredCellStyle}"
                                                        ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="180"
                                                        CellStyle="{StaticResource CenteredCellStyle}"
                                                        ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="120"
                                                        CellStyle="{StaticResource CenteredCellStyle}"
                                                        ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                                    <DataGridTextColumn Header="Barangay" Binding="{Binding Barangay}" Width="160"
                                                        CellStyle="{StaticResource CenteredCellStyle}"
                                                        ElementStyle="{StaticResource CenteredTextBlockStyle}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ===================== EDIT SHARE MODAL ===================== -->
        <Grid Panel.ZIndex="920"
              Visibility="{Binding IsEditShareOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseEditShareCommand}"/>

            <Border Width="520"
                    CornerRadius="18"
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxHeight="{x:Static SystemParameters.WorkAreaHeight}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Padding="18">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Edit Share"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#2E3A59"/>

                            <Button Grid.Column="1"
                                    Content="✕"
                                    Width="28" Height="28"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Command="{Binding CloseEditShareCommand}"/>
                        </Grid>

                        <!-- Money -->
                        <StackPanel Grid.Row="1" Margin="0,14,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProject.BudgetType}" Value="Money">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="Share Amount (₱)" Foreground="#2E3A59" Margin="0,0,0,6"/>
                            <TextBox Style="{StaticResource ModalTextBox}"
                                     Text="{Binding EditShareAmountInput, UpdateSourceTrigger=PropertyChanged}"
                                     PreviewTextInput="Money_PreviewTextInput"
                                     PreviewKeyDown="BlockSpace_PreviewKeyDown"/>

                            <TextBlock Text="{Binding EditShareAmountError}"
                                       Foreground="#E11D48"
                                       FontSize="11"
                                       Margin="2,6,0,0"
                                       Visibility="{Binding HasEditShareAmountError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- InKind -->
                        <StackPanel Grid.Row="1" Margin="0,14,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedProject.BudgetType}" Value="InKind">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="Share In-kind" Foreground="#2E3A59" Margin="0,0,0,6"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Style="{StaticResource ModalTextBox}"
                                         Text="{Binding EditShareQtyInput, UpdateSourceTrigger=PropertyChanged}"
                                         PreviewTextInput="DigitsOnly_PreviewTextInput"
                                         PreviewKeyDown="BlockSpace_PreviewKeyDown"/>

                                <TextBox Grid.Column="2"
                                         Style="{StaticResource ModalTextBox}"
                                         Text="{Binding EditShareUnitInput, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <TextBlock Text="{Binding EditShareInKindError}"
                                       Foreground="#E11D48"
                                       FontSize="11"
                                       Margin="2,6,0,0"
                                       Visibility="{Binding HasEditShareInKindError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                            <Button Content="Cancel"
                                    Width="120" Height="38"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Foreground="#2E3A59"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Command="{Binding CloseEditShareCommand}"/>

                            <Button Content="Confirm"
                                    Margin="16,0,0,0"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="140"
                                    Height="38"
                                    Padding="0"
                                    Command="{Binding ConfirmEditShareCommand}"
                                    IsEnabled="{Binding CanConfirmEditShare}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ===================== REMOVE CONFIRM MODAL ===================== -->
        <Grid Panel.ZIndex="930"
              Visibility="{Binding IsRemoveOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseRemoveCommand}"/>

            <Border Width="520"
                    CornerRadius="18"
                    Background="White"
                    Padding="18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Remove Beneficiary"
                                   Foreground="#E11D48"
                                   FontSize="18"
                                   FontWeight="Bold"/>

                        <Button Grid.Column="1"
                                Content="✕"
                                Width="28" Height="28"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Cursor="Hand"
                                Command="{Binding CloseRemoveCommand}"/>
                    </Grid>

                    <TextBlock Grid.Row="1"
                               Text="{Binding RemoveMessage}"
                               Margin="0,12,0,0"
                               Foreground="#2E3A59"
                               TextWrapping="Wrap"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="Cancel"
                                Width="140" Height="40"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="#2E3A59"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Command="{Binding CloseRemoveCommand}"/>

                        <Button Content="Confirm"
                                Margin="18,0,0,0"
                                Width="140" Height="40"
                                Background="#E11D48"
                                Foreground="White"
                                BorderBrush="Transparent"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Command="{Binding ConfirmRemoveCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="12" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
