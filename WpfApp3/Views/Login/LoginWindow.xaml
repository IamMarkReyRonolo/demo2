<Window x:Class="WpfApp3.Views.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp3.ViewModels.Login"
        Title="E-Kalinga Management System"
        Width="420" Height="720"
        MinWidth="420" MinHeight="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F5F9">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>

        <!-- TOP AREA -->
        <Border Grid.Row="0" Background="#F3F5F9" Padding="0">
            <Border Background="White" CornerRadius="0" Padding="25">
                <Grid>
                    <!-- Header auto (no overflow), form expands, button pinned -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="64"/>
                    </Grid.RowDefinitions>

                    <!-- HEADER -->
                    <StackPanel Grid.Row="0"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,14">
                        <Ellipse Width="76" Height="76" Fill="#EEF2FF"/>
                        <TextBlock Margin="0,12,0,0"
                                   Text="E-Kalinga&#x0a;Management&#x0a;System"
                                   TextAlignment="Center"
                                   Foreground="#1E3A8A"
                                   FontWeight="SemiBold"
                                   FontSize="20"
                                   LineHeight="24"/>
                    </StackPanel>

                    <!-- FORM -->
                    <Grid Grid.Row="1" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- username -->
                            <RowDefinition Height="14"/>
                            <RowDefinition Height="Auto"/>
                            <!-- password -->
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="44"/>
                            <!-- reserved error/hint space -->
                        </Grid.RowDefinitions>

                        <!-- Username -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Username"
                                       Foreground="#1F2A44"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Margin="0,0,0,6"/>
                            <Border CornerRadius="10"
                                    BorderBrush="#D7DEEA"
                                    BorderThickness="1"
                                    Background="White">
                                <TextBox Height="44"
                                         Padding="14,10"
                                         FontSize="13"
                                         BorderThickness="0"
                                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                            </Border>
                        </StackPanel>

                        <!-- Password -->
                        <StackPanel Grid.Row="2">
                            <TextBlock Text="Password"
                                       Foreground="#1F2A44"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       Margin="0,0,0,6"/>
                            <Border CornerRadius="10"
                                    BorderBrush="#D7DEEA"
                                    BorderThickness="1"
                                    Background="White">
                                <PasswordBox x:Name="PwdBox"
                                             Height="44"
                                             Padding="14,10"
                                             FontSize="13"
                                             BorderThickness="0"
                                             PasswordChanged="PasswordBox_OnPasswordChanged"/>
                            </Border>
                        </StackPanel>

                        <!-- Error / hint area (reserved) -->
                        <Grid Grid.Row="4" Margin="0,0,0,22">
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#C0392B"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"/>
                        </Grid>
                    </Grid>

                    <!-- BUTTON (always visible) -->
                    <Grid Grid.Row="2">
                        <Button Height="48"
                                VerticalAlignment="Center"
                                Background="#2E3A59"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Command="{Binding LoginCommand}"
                                Content="Log in"
                                HorizontalAlignment="Stretch">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Border>

        <!-- BOTTOM BANNER -->
        <Border Grid.Row="1" Background="#1F2A44">
            <Grid>
                <Rectangle Fill="#2C3E66"/>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Local Government Unit of Sulop"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="13"
                               TextAlignment="Center"/>
                    <TextBlock Text="Municipality of Sulop, Davao del Sur"
                               Foreground="#D6DDF0"
                               FontSize="12"
                               TextAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
