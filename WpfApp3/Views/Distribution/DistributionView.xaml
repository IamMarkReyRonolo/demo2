<UserControl x:Class="WpfApp3.Views.Distribution.DistributionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfApp3.ViewModels.Distribution"
             xmlns:conv="clr-namespace:WpfApp3.Views.Allotment"
             Background="#F3F5F9">

    <!-- ✅ NOTE:
         If Designer keeps crashing because of DB connection (EkalingaDb),
         REMOVE this DataContext block and set DataContext in code-behind instead. -->
    <UserControl.DataContext>
        <vm:DistributionViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:EqualsToBoolConverter x:Key="EqualsToBoolConverter"/>

        <!-- Backdrop button (prevents hover turning blue) -->
        <Style x:Key="BackdropButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="Transparent"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon-like square buttons -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pagination button base -->
        <Style x:Key="PageButton" TargetType="Button">
            <Setter Property="MinWidth" Value="34"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="8" Background="{TemplateBinding Background}" Padding="10,4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#EEF2FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Centering -->
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <Style x:Key="CenteredTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Modal TextBox -->
        <Style x:Key="ModalTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="BorderBrush" Value="#E5ECFA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Rounded confirm button -->
        <Style x:Key="RoundedPrimary" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </UserControl.Resources>

    <Grid>

        <!-- PAGE -->
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top row: project dropdown + eye + total budget -->
            <Grid Grid.Row="0" Margin="0,6,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="52"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="12" Background="White" Padding="12,6">
                    <ComboBox ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject}"
                              DisplayMemberPath="ProjectName"
                              BorderThickness="0"
                              Background="Transparent"
                              Foreground="#2E3A59"
                              FontSize="12"/>
                </Border>

                <Button Grid.Column="1"
                        Style="{StaticResource IconButton}"
                        Margin="10,0,0,0"
                        Content="👁"
                        Command="{Binding OpenProjectDetailsCommand}"/>

                <TextBlock Grid.Column="3"
                           FontSize="18"
                           Text="{Binding TotalBudgetText}"
                           Foreground="#2E3A59"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Release button row -->
            <Grid Grid.Row="1" Margin="0,6,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Endorsed Beneficiaries"
                           Foreground="#2E3A59"
                           FontWeight="SemiBold"
                           FontSize="13"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding OpenReleaseSessionCommand}"
                        Content="Release"/>
            </Grid>

            <!-- Found text -->
            <TextBlock Grid.Row="2"
                       Text="{Binding FoundText}"
                       Foreground="#6B778C"
                       FontSize="12"
                       Margin="2,0,0,10"/>

            <!-- Table -->
            <Border Grid.Row="3"
                    CornerRadius="18"
                    Background="White"
                    Padding="10"
                    Margin="0,6,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="2" Opacity="0.06"/>
                </Border.Effect>

                <DataGrid ItemsSource="{Binding Items}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeaderWidth="0"
                          Background="Transparent"
                          BorderThickness="0"
                          FontSize="12"
                          Foreground="#2E3A59"
                          ColumnHeaderHeight="42"
                          RowHeight="48"
                          IsReadOnly="True"
                          SelectionUnit="FullRow"
                          SelectionMode="Single"
                          FocusVisualStyle="{x:Null}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="160"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="160"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="120"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Barangay" Binding="{Binding Barangay}" Width="160"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Classification" Binding="{Binding Classification}" Width="150"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Share" Binding="{Binding ShareText}" Width="160"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>

                        <DataGridTextColumn Header="Released" Binding="{Binding ReleasedText}" Width="120"
                                            CellStyle="{StaticResource CenteredCellStyle}"
                                            ElementStyle="{StaticResource CenteredTextBlockStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Pagination -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                <Button Content="Previous" Style="{StaticResource PageButton}" Command="{Binding PreviousPageCommand}"/>

                <ItemsControl ItemsSource="{Binding PageNumbers}" Margin="6,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}"
                                    Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Next" Style="{StaticResource PageButton}" Command="{Binding NextPageCommand}"/>
            </StackPanel>
        </Grid>

        <!-- ================= TOAST ================= -->
        <Border Panel.ZIndex="1000"
                Background="{Binding ToastBackground}"
                CornerRadius="12"
                Padding="12"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,18,18,0"
                Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="{Binding ToastMessage}" Foreground="White" FontWeight="SemiBold"/>
        </Border>

        <!-- ================= RELEASE SESSION MODAL ================= -->
        <Grid Panel.ZIndex="900"
              Visibility="{Binding IsReleaseSessionOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseReleaseSessionCommand}"/>

            <Border Width="980"
                    CornerRadius="18"
                    Background="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxHeight="700"
                    Loaded="ReleaseModal_Loaded">

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <!-- ✅ Grid has no Padding, use Margin -->
                    <Grid Margin="18">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- header -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Release"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2E3A59"/>

                            <Button Grid.Column="1"
                                    Content="✕"
                                    Width="30" Height="30"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Cursor="Hand"
                                    Command="{Binding CloseReleaseSessionCommand}"/>
                        </Grid>

                        <!-- details + scan -->
                        <Grid Grid.Row="1" Margin="0,12,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="320"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="{Binding ReleaseProjectText}" Foreground="#2E3A59" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding ReleaseBudgetText}" Foreground="#6B778C" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding ReleaseProgressText}" Foreground="#6B778C" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Scan Beneficiary ID" Foreground="#2E3A59" Margin="0,0,0,6"/>

                                <TextBox Style="{StaticResource ModalTextBox}"
             IsReadOnly="True"
             IsTabStop="False"
             Cursor="Arrow"
             Text="{Binding ScanInput, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>

                        <!-- release list -->
                        <Border Grid.Row="2" CornerRadius="14" BorderBrush="#EEF2FF" BorderThickness="1" Padding="6">
                            <DataGrid ItemsSource="{Binding ReleaseItems}"
                                      SelectedItem="{Binding SelectedReleaseRow}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      RowHeaderWidth="0"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      FontSize="12"
                                      Foreground="#2E3A59"
                                      ColumnHeaderHeight="40"
                                      RowHeight="44"
                                      IsReadOnly="True"
                                      SelectionUnit="FullRow"
                                      SelectionMode="Single"
                                      FocusVisualStyle="{x:Null}">

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsReleased}" Value="True">
                                                <Setter Property="Opacity" Value="0.55"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="150"/>
                                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="150"/>
                                    <DataGridTextColumn Header="Barangay" Binding="{Binding Barangay}" Width="150"/>
                                    <DataGridTextColumn Header="Classification" Binding="{Binding Classification}" Width="150"/>
                                    <DataGridTextColumn Header="Share" Binding="{Binding ShareText}" Width="150"/>
                                    <DataGridTextColumn Header="Released" Binding="{Binding ReleasedText}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- ================= CONFIRM RELEASE MODAL ================= -->
        <Grid Panel.ZIndex="920"
              Visibility="{Binding IsConfirmReleaseOpen, Converter={StaticResource BoolToVis}}">
            <Border Background="#80000000"/>
            <Button Style="{StaticResource BackdropButton}" Command="{Binding CloseConfirmReleaseCommand}"/>

            <Border Width="620"
                    CornerRadius="18"
                    Background="White"
                    Padding="18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Confirm Release"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#2E3A59"/>

                        <Button Grid.Column="1"
                                Content="✕"
                                Width="28" Height="28"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Cursor="Hand"
                                Command="{Binding CloseConfirmReleaseCommand}"/>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="18"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Beneficiary ID" Foreground="#6B778C" FontSize="12"/>
                            <TextBlock Text="{Binding ConfirmId}" Foreground="#2E3A59" FontWeight="SemiBold" Margin="0,4,0,0"/>

                            <TextBlock Text="Name" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                            <TextBlock Text="{Binding ConfirmName}" Foreground="#2E3A59" FontWeight="SemiBold" Margin="0,4,0,0"/>

                            <TextBlock Text="Classification" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                            <TextBlock Text="{Binding ConfirmClassification}" Foreground="#2E3A59" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Barangay" Foreground="#6B778C" FontSize="12"/>
                            <TextBlock Text="{Binding ConfirmBarangay}" Foreground="#2E3A59" Margin="0,4,0,0"/>

                            <TextBlock Text="Share to Release" Foreground="#6B778C" FontSize="12" Margin="0,12,0,0"/>
                            <TextBlock Text="{Binding ConfirmShare}" Foreground="#2E3A59" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="Cancel"
                                Width="140" Height="40"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Foreground="#2E3A59"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Command="{Binding CloseConfirmReleaseCommand}"/>

                        <Button Content="Confirm"
                                Margin="18,0,0,0"
                                Style="{StaticResource RoundedPrimary}"
                                Command="{Binding ConfirmReleaseCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>