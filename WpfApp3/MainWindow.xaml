<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp3.ViewModels"
        Title="WpfApp3" Height="820" Width="1400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F3F5F9">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <!-- Logo / Title -->
                <StackPanel Grid.Row="0" Margin="20" VerticalAlignment="Center">
                    <TextBlock Text="E-Kalinga" FontSize="18" FontWeight="Bold" Foreground="#2E3A59"/>
                    <TextBlock Text="Management System" FontSize="12" Foreground="#6B778C"/>
                </StackPanel>

                <!-- Menu -->
                <!-- Menu -->
                <ListBox Grid.Row="1"
         Style="{StaticResource NavListBoxStyle}"
         ItemContainerStyle="{StaticResource NavListBoxItemStyle}"
         ItemsSource="{Binding NavItems}"
         SelectedItem="{Binding SelectedNavItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}"
                       Foreground="#2E3A59"
                       FontSize="14"
                       VerticalAlignment="Center"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Logout (placeholder) -->
                <Button Grid.Row="2"
                        Margin="18"
                        Padding="12,10"
                        Content="Log Out"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="#2E3A59"
                        HorizontalAlignment="Left"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar (simple) -->
            <Grid Grid.Row="0" Margin="0,0,0,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding PageTitle}"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#2E3A59"
                           VerticalAlignment="Center"/>

                <Border Grid.Column="1" Background="White" CornerRadius="14" Padding="14,10">
                    <TextBlock Text="Admin" Foreground="#2E3A59" FontWeight="SemiBold"/>
                </Border>
            </Grid>

            <!-- Page host -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <ContentControl Content="{Binding CurrentView}" />
            </Border>
        </Grid>
    </Grid>
</Window>
